@model GameViewModel

<div class="text-left">
    <h1 class="display-4">@Model.Name @(Model.IsApproved == true ? string.Empty : "(Not approved)")</h1>
</div>

<div id="game_images" class="carousel slide" data-ride="carousel">

    <div class="carousel-inner">
        @for (int i = 0; i < Model.Screenshots.Length; i++)
        {
            <div class="carousel-item @(i == 0 ? "active" : string.Empty) ">
                <img src="~/Images/GameImages/@Model.Screenshots[i]" alt="Image unavailable" width="1100" height="500" />
            </div>
        }
    </div>

    <a class="carousel-control-prev" href="#game_images" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#game_images" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>
<div id="buyBotton">
    <div id="gamePrice">
        <form method="post">
            <p class="text-left display-4">
                @(Model.Price != 0 ? (Model.Price - Model.Discont) + "$" : "Free")
                <input type="hidden" name="id" value="@Model.Id" />

                <input asp-for="Id" asp-controller="Store" asp-action="AddToCart" id="addToCartBotton" type="submit" class="btn btn-primary" value="Add to cart" />
            </p>
        </form>
    </div>
</div>